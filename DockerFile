# Dockerfile
FROM python:3.11-slim

# Instala dependencias del sistema necesarias para compilar y distutils
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
       build-essential \
       python3-distutils \
       python3-dev \
       git \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copia requirements y actualiza pip/setuptools/wheel antes de instalar
COPY requirements.txt .

RUN python -m pip install --upgrade pip setuptools wheel
RUN pip install -r requirements.txt

# Copia el resto del proyecto
COPY . .

CMD ["gunicorn", "gestores2.wsgi:application", "--bind", "0.0.0.0:8000"]
